@{
    ViewData["Title"] = "Summary";
}

@model SummaryViewModel

<h3>Overview</h3>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Order number: @(Model.Register.OrderId)</h3>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <h3>Personal Data</h3>
                <div>@Model.Register.Name</div>
                <div>@Model.Register.Phone</div>
            </div>
            <div class="col-md-3">
                @Model.Register.Email
            </div>
            <div class="col-md-6">
                <h3>Delivery Address</h3>
                <div>@Model.Register.Address - @Model.Register.Address2 - @Model.Register.City - @Model.Register.State - @Model.Register.Country</div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <h3>Item</h3>
            </div>
            <div class="col-md-2">
                <h3>Quantity</h3>
            </div>
        </div>
        @foreach (var item in Model.Cart.CartList)
        {
        <div class="row">
            <div class="col-md-10">
                <div>@item.ProductName</div>
            </div>
            <div class="col-md-2">
                <div class="pull-right">@item.Quantity</div>
            </div>
        </div>
        }
        
   
    </div>
</div>
